<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 타이틀바 제거 -->
    <style name="PopupTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="WorkTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>



    </style>

    <!-- 급여계산기 시간등록 팝업-->
    <style name="workPopup">
        <item name="android:textSize">15dp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--숫자 구분선 색상 변경-->
        <item name="colorControlNormal">@color/background</item>

    </style>
</resources>
